    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Imagens do carrossel
            const carouselImages = [
                {
                    url: '../assets/images/Sesi-Vista.png',
                    caption: 'Vista panorâmica da Escola SESI Salto'
                },
                {
                    url: '../assets/images/Sesi-Biblioteca.png',
                    caption: 'Biblioteca com amplo acervo para pesquisa e leitura'
                },
                {
                    url: '../assets/images/escola-quadra.png',
                    caption: 'Quadra poliesportiva para atividades físicas e eventos'
                },
                {
                    url: '../assets/images/Sesi-Refeitório.png',
                    caption: 'Refeitório amplo e confortável para os alunos'
                }
            ];
            
            const track = document.querySelector('.carousel-track');
            const dotsContainer = document.querySelector('.carousel-dots');
            const prevButton = document.querySelector('.prev-button');
            const nextButton = document.querySelector('.next-button');
            
            let currentIndex = 0;
            
            // Criar slides do carrossel
            carouselImages.forEach((image, index) => {
                const slide = document.createElement('div');
                slide.className = 'carousel-slide';
                slide.innerHTML = `
                    <img src="${image.url}" alt="${image.caption}" class="carousel-image">
                    <div class="carousel-caption">${image.caption}</div>
                `;
                track.appendChild(slide);
                
                // Criar pontos de navegação
                const dot = document.createElement('button');
                dot.className = 'carousel-dot';
                dot.setAttribute('aria-label', `Imagem ${index + 1}`);
                dot.addEventListener('click', () => showImage(index));
                dotsContainer.appendChild(dot);
            });
            
            // Função para mostrar imagem específica
            function showImage(index) {
                currentIndex = index;
                track.style.transform = `translateX(-${currentIndex * 100}%)`;
                
                // Atualizar pontos ativos
                document.querySelectorAll('.carousel-dot').forEach((dot, i) => {
                    dot.classList.toggle('active', i === currentIndex);
                });
            }
            
            // Botões de navegação
            function next() {
                currentIndex = (currentIndex + 1) % carouselImages.length;
                showImage(currentIndex);
            }
            
            function prev() {
                currentIndex = (currentIndex - 1 + carouselImages.length) % carouselImages.length;
                showImage(currentIndex);
            }
            
            prevButton.addEventListener('click', prev);
            nextButton.addEventListener('click', next);
            
            // Navegação por teclado
            track.setAttribute('tabindex', '0');
            track.addEventListener('keydown', (e) => {
                if (e.key === 'ArrowLeft') { prev(); e.preventDefault(); }
                if (e.key === 'ArrowRight' || e.key === ' ' || e.key === 'Enter') { next(); e.preventDefault(); }
            });

            // Swipe para mobile
            let startX = null;
            track.addEventListener('touchstart', e => startX = e.touches[0].clientX);
            track.addEventListener('touchend', e => {
                if (startX === null) return;
                let dx = e.changedTouches[0].clientX - startX;
                if (dx > 40) prev();
                if (dx < -40) next();
                startX = null;
            });

            // Auto-play do carrossel (a cada 5 segundos)
            let interval = setInterval(next, 5000);
            
            // Para o auto-play quando o usuário interage
            track.addEventListener('mouseenter', () => clearInterval(interval));
            track.addEventListener('mouseleave', () => interval = setInterval(next, 5000));
            
            // Inicialização
            showImage(0);
        });
    </script>
